<p class="pageHeader">All Clothing Products</p>

<!--<p><a href="/food-products">Food Products</a></p>-->
<!--<p><a href="/health-products">Health Products</a></p>-->

<div class="container">

    <table class="products-list">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        #foreach($clothingProduct in $clothingProducts)
        <tr>
            <td><img class="sml" style="display: block;" width="100%"  src="$clothingProduct.getImage()" alt="n/a"></td>
            <td>$clothingProduct.getName()</td>
            <td>$clothingProduct.getDescription()</td>
            <td>Â£$clothingProduct.formatToDecimal($clothingProduct.getPrice())</td>
            #if ($clothingProduct.availability)
            <form action="/basket" method="post">
                <td>Qty:<input class="inputbox" type="number" min="1" name="quantity" required="true"></td>
                <td><input type="submit" value="Add to basket" class="button"></td>
                <td>
                    <input id="id" class="inputbox" type="number" name="id" required="true" value="$clothingProduct.getId()" hidden>
                </td>
            </form>
            #else
            <td class="trhide"></td>
            <td>Sorry, out of stock</td>
            <td class="trhide"></td>
            #end
        </tr>
        #end
    </table>

    <a href="/products" class="button center">Back To All Products</a>

</div>